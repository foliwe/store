<%= search_form_for @search do |f| %>
 <%= f.label :name_cont ,"Name Contains"%>
  <%= f.text_field :name_cont%><br>


   <%= f.label :price_gteq,"Price >=" %>
  <%= f. text_field :price_gteq %>

  <%= f.submit "search" ,:name => nil%>
  <%end%>

<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :name , "Name"%> </th>
      <th><%= sort_link @search, :ages , "Ages"%></th>
      <th><%= sort_link @search, :category , "Category"%></th>
       <th><%= sort_link @search, :price , "Price"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.ages.map {|a| a.name}.join(', ') %></td>
        <td><% if book.category %> 
            <%=book.category.name %>
            <% else %>
              <%=  "----" %>
             
        <% end %></td>
         <td><%= book.price %></td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

